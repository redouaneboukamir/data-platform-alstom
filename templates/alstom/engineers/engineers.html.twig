{% extends 'alstom/index.html.twig' %}

            {% block body %}
                <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                        <h1>Engineers</h1>
                        <a href="{{ path('alstom.create-engineer') }}"><button class="btn btn-primary">New</button></a>
                    </div>
                    <div class="jumbotron search-bar-engineer">
                        <div class="container">
                            {{ form_start(form) }}
                            <div class="form-row row">
                                <div class="col-8">
                                    {{ form_row(form.name_engineer) }}
                                </div>
{#                                <div class="col">#}
{#                                    {{ form_row(form.num_badge) }}#}
{#                                </div>#}
                                <div class="col-2">
                                    <button class="btn btn-primary">Search</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    <div class="table-responsive">
                        <table class="table table-striped table-sm table-all-engineers">
                            <thead class="thead-dark">
                            <tr class="title-table-engineers">
                                <th scope="col">Name</th>
                                <th scope="col" class="title-surname-engineer">Surname</th>
                                <th scope="col" class="title-nbBadge-engineer">Number of badge</th>
                                <th scope="col" class="title-project-engineer">Projects</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for engineer in engineers %}

                                <tr>
                                    <td class="name-engineer-table"><a href="{{ path('alstom.engineer-show', {id: engineer.id}) }}">{{ engineer.name }}</a></td>
                                    <td class="surname-engineer-table">{{ engineer.surname }}</td>
                                    <td class="number-badge-engineer">{{ engineer.NumBadge }}</td>
                                    <td class="number-project-engineer">
                                        {% for project in engineer.projects %}
                                            <p>{{ project.name }}</p>
                                        {% endfor %}
                                    </td>

                                    <td class="content-btn-edit-delete">
                                        <a href="{{ path('alstom.edit-engineer', {id: engineer.id}) }}"><button class="btn btn-secondary btn-edit-engineer">Edit</button> </a>
                                        <form method="post" action="{{ path('alstom.delete-engineer' ,{id:engineer.id}) }}" onsubmit="return confirm('Are you sure to delete this engineer?')">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ engineer.id) }}">
                                            <button class="btn btn-danger btn-delete-engineer">X</button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </main>
            {% endblock %}
