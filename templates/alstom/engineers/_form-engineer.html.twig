{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.min.css">
{% endblock %}
{{ form_start(form) }}
<div class="row">
    <div class="col-md-5">{{ form_row(form.Name) }}</div>
    <div class="col-md-5">{{ form_row(form.Surname) }}</div>
    <div class="col-md-5">{{ form_row(form.Num_Badge) }}</div>

</div>
<button class="btn btn-primary">{{ button|default('Send') }}</button>
{{ form_end(form) }}