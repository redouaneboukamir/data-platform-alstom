{% extends 'alstom/dashboard.html.twig' %}

{% block body %}

    <div class="spinner-border text-info wait-spinner" id="wait-spinner" role="status" style="display:none">
        <span class="sr-only">
            Loading...
        </span>
    </div>


    <div class="modal fade" id="modal-addfleet-project" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header card-header-title">
                    <h4 class="modal-title card-element-title">Select Fleet</h4>
                    <button aria-label="Close" class="close" data-dismiss="modal" id="close-modal-form-train-fleet" style="color:red; position:absolute; right:20px; margin-top:-10px;" type="button">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="card-content clearfix">
                        <form class="form-addfleet-project" id="form-addfleet-project">
                            <select class="form-control col-12" id="select-fleet-project" name="train-fleet"></select>
                        </form>
                    </div>
                    <button class="btn btn-success mt-4" id="valid-fleet-project">Valid</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modal-addbaseline-project" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header card-header-title">
                    <h4 class="modal-title card-element-title">Select baseline</h4>
                    <button aria-label="Close" class="close" data-dismiss="modal" id="close-modal-form-train-fleet" style="color:red; position:absolute; right:20px; margin-top:-10px;" type="button">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="card-content clearfix">
                        <form class="form-addbaseline-project" id="form-addbaseline-project">
                            <select class="form-control col-12" id="select-baseline-project" name="train-fleet"></select>
                        </form>
                    </div>
                    <button class="btn btn-success mt-4" id="valid-baseline-project">Valid</button>
                </div>
            </div>
        </div>
    </div>

    <main class="" role="main">
        <div class="container-header container-fluid">
            <div class="row content-details-img">

                <div class="col-md-12 details">
                    <h1>{{ project.name|upper }}</h1>
                    <div class="content-btn">
                        <a href="{{path('alstom.create-fleet',{'id':project.id})}}">
                            <button class="btn-shadow-primary d-inline-flex align-items-center btn btn-primary" type="button">
                                Create fleet
                            </button>
                        </a>
                        <a href="{{path('alstom.create-baseline',{'id':project.id})}}">

                            <button class="btn-shadow d-inline-flex align-items-center btn btn-success" type="button">
                                Create baseline
                            </button>
                        </a>

                    </div>

                </div>
            </div>
            <div class="border-separate-picture-info"></div>
            <div class="row content-dashboard-table">
                <div class="col-lg-8 col-md-10 content-dasboard">
                    <img class="img img-responsive img-fluid" src="{{ asset('../build/img/dashboard.png') }}">
                </div>
                <div class="col-lg-3 col-md-10 mt-4" style="padding:0">

                    <table class="table table-striped table-show-project table-content">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Fleets :</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for fleet in project.fleets %}
                                <tr class="col-md-12 title-table">
                                    <td class="td-table">
                                        <a href="{{ path('alstom.show-fleet', {name: fleet.name}) }}">
                                            {{ fleet.name }}
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <table class="table table-striped table-show-project table-content">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Baselines :</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for baseline in project.baselines %}
                                <tr class="col-md-12 title-table">
                                    <td class="td-table">
                                        <a href="{{ path('alstom.show-baseline', {id: baseline.id}) }}">
                                            {{ baseline.name }}
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                </div>

            </div>
        </div>
    </main>
{% endblock %}
