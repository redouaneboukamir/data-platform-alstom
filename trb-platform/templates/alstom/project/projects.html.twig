{% extends 'alstom/dashboard.html.twig' %}

{% block body %}

    <main class="" role="main">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h2>
                <i class="fa fa-angle-right"></i>
                Projects</h2>
            <a href="{{ path('alstom.create-project') }}">
                <button class="btn btn-primary">New</button>
            </a>
        </div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <section id="unseen">
            <div class="main-card mb-3 card">
                <div class="card-header">
                    <div class="card-header-title font-size-lg text-capitalize font-weight-normal">Search</div>
                    <div class="btn-actions-pane-right">
                        <div
                            class="pull-left search">{# {{ form_start(form, {'attr':{'id':'search-fleet', 'class':'form-search'}}) }}{{ form_widget(form.name_project) }}{{ form_end(form) }} #}
                        </div>

                        <div class="result" id="result-fleet"></div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="align-middle text-truncate mb-0 table table-borderless table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">Name</th>
                                <th class="text-center">Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for project in projects %}
                                <tr class="td-table">
                                    <td class="text-center text-muted">
                                        <a href="{{ path('alstom.show-project', {id: project.id}) }}">{{  project.name }}</a>
                                    </td>
                                    <td class="text-center text-muted">
                                        {{  project.description }}
                                    </td>
                                </tr>
                            {% endfor %}

                        </tbody>
                    </table>

                </div>
            </div>
        </section>
    </main>
{% endblock %}
