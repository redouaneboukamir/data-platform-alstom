{% extends 'alstom/index.html.twig' %}

{% block body %}
    <div class="spinner-border text-info wait-spinner" id="wait-spinner" role="status">
        <span class="sr-only">
            Loading...
        </span>
    </div>

    <main class="col-md-10 offset-1 col-lg-11 main-show" role="main">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h2>
                <i class="fa fa-angle-right"></i>
                Logs</h2>
            <a href="{{ path('alstom.add-logs') }}">
                <button class="btn btn-primary">Add</button>
            </a>
        </div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <section id="unseen">
            <div class="pull-left search">
                <form action="" class="form-search" id="search-logs">
                    <input class="form-control" id="logs_name" placeholder="search logs" type="text">
                </form>
            </div>
            <div class="result" id="result-fleet"></div>
            <table class="table table-condensed table-content mt-4">
                <thead>
                    <tr class="title-table">
                        <th class="">Fleet</th>
                        <th class="">Trains</th>
                        <th class="th-empty" scope="col">Equipement</th>
                        <th class=" numeric" scope="col">Type</th>
                        <th class="th-empty" scope="col">Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for log in logs %}
                        <tr class="td-table">
                            <td>
                                {{  log.assocLogBaseline.baseline.trains.name }}
                            </td>
                            <td>
                                {{   log.assocLogBaseline.baseline.trains.Projects.name }}

                            </td>
                            <td>
                                {{  log.assocLogBaseline.baseline.etcsid }}
                            </td>

                            <td>
                                {{  log.assocLogBaseline.TypeFile }}

                            </td>
                            <td>
                                {{  log.assocLogBaseline.date|date('d/m/Y') }}
                            </td>

                            <td class="td-plug" id="{{log.keylogs}}">
                                <i class="fas fa-download"></i>
                            </td>
                        </tr>
                    </tbody>
                {% endfor %}
            </table>
        </section>
    </main>
{% endblock %}
