{% extends 'alstom/index.html.twig' %}

{% block body %}
    <div class="spinner-border text-info wait-spinner" id="wait-spinner" role="status">
        <span class="sr-only">
            Loading...
        </span>
    </div>

    <main class="col-md-12 col-lg-12 px-4" role="main">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h2>
                <i class="fas fa-file-upload"></i>
                Search LOGS</h2>
        </div>

        <div class="jumbotron content-form-baseline">
            <form>
                <div class="form-group">
                    <label for="fleet_select">Fleets</label>
                    <select class="form-control" id="fleet_select"></select>
                </div>
            </form>
            <form>
                <div class="form-group">
                    <label for="train_select">Trains</label>
                    <select class="form-control" id="train_select"></select>
                </div>
            </form>
            <form>
                <div class="form-group">
                    <label for="ertms_select">ERTMS</label>
                    <select class="form-control" id="ertms_select"></select>
                </div>
            </form>

        </div>


    {% endblock %}
