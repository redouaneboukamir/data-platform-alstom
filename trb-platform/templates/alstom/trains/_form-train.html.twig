<div class="row">
    <div class="col-md-10">{{ form_row(form_train.name) }}</div>
    <div class="col-md-10">{{ form_row(form_train.projects) }}</div>
    <div class="col-md-10">{{ form_row(form_train.trainType) }}</div>
    {{ form_row(form._token) }}


