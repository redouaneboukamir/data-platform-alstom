{% extends 'alstom/dashboard.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="table-container">
            <div class="management-title">
                <h2>Users</h2>

            </div>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
            <div class="row">
                <div class="col-sm-10"></div>
                <div class="col-sm-2" style="display:flex;justify-content:flex-end">
                    <a href="{{ path('user_add') }}">
                        <button class="btn btn-primary">
                            Add User
                        </button>
                    </a>
                </div>
            </div>
            <br/>

            <div class="main-card mb-3 card">
                <div class="table-responsive">
                    <table class="align-middle text-truncate mb-0 table table-borderless table-hover">
                        <thead>
                            <tr>
                                <th class=" text-center">Username</th>
                                <th class=" text-center">Email</th>
                                <th class=" text-center">Fleets</th>
                                <th class=" text-center">User Group</th>

                            </tr>
                        </thead>
                        <tbody>
                            {% for Entity in EntityArray %}
                                <tr class="td-table">
                                    <td class=" text-center">{{ Entity.username }}</td>

                                    {% if Entity.email is not defined %}
                                        <td></td>
                                    {% else %}
                                        <td class=" text-center">{{ Entity.email }}</td>
                                    {% endif %}
                                    {% if Entity.fleets is not defined %}
                                        <td></td>
                                    {% else %}
                                        <td
                                            class=" text-center">
                                            {# <select name="" id=""> #}
                                            {% for fleet in Entity.fleets %}
                                                {# <option value="">{{fleet}}</option> #}

                                                <a href="{{path('alstom.project-show',{'id':fleet})}}">{{fleet}}</a>
                                            {% endfor %}
                                            {# </select> #}
                                        </td>
                                    {% endif %}
                                    <td class=" text-center">
                                        <span class="{{ Entity.group }}">{{ Entity.group }}</span>
                                    </td>
                                    <td class=" text-right">
                                        {% if Entity.isSuperAdmin is not defined %}
                                            <a href="{{ path('user_edit', {id: Entity.id}) }}">
                                                <button class="btn btn-secondary">
                                                    <span>Edit</span>
                                                </button>
                                            </a>
                                            <a href="{{ path('user_delete', {id: Entity.id}) }}">
                                                <button class="btn btn-danger">
                                                    <span>Delete</span>
                                                </button>
                                            </a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {% block modal %}{% endblock %}
{% endblock %}
